<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/text_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="110dp"
                android:layout_height="70dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="119dp"
                android:layout_height="70dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="118dp"
                android:layout_height="70dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_databarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Isi dan Lengkapi Data Barang"
            android:textSize="10sp"
            android:textColor="#5555"
            />

        <EditText
            android:id="@+id/input_namabarang"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama Barang"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/input_jenisbarang"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Jenis Barang"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_descbarang"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="Deskripsi Barang"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/input_jumlah"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Jumlah Barang"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kondisi Barang" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_harga"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Harga Barang"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_input_produk"
            android:layout_width="303dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_red"
            android:text="INPUT PRODUCT"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.705" />




</LinearLayout>
    </ScrollView>